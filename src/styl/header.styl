.b-header
  width 100%
  height 134px
  padding 50px
  display flex
  justify-content space-between
  box-sizing: border-box;
  min-width 320px
  position fixed
  z-index 100
  background-color cWhite
  &__logo
    background: url('../img/svg/logo.svg');
    background-repeat: no-repeat
    width 259px
    height 34px
    
  &__menu
    width 52px
    position relative
    height 40px
    &:before{
      content ''
      position:absolute
      width 100%
      top:0
      height: 100%
      left 0
      background: url('../img/svg/close.svg');
      opacity: 0
    }
    &:after{
      content ''
      position:absolute
      width 100%
      transition opacity .3s ease
      top:0
      height: 100%
      left 0
      background: url('../img/svg/menu.svg');
      opacity: 1
    }
    &._open
      width 40px
      &:before{
        opacity 1
        transition opacity .3s ease
      }
      &:after{
        opacity 0
      }
