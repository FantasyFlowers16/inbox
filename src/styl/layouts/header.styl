.b-header
  width 100%
  height 67px
  padding 25px
  display flex
  justify-content space-between
  box-sizing: border-box
  min-width 320px
  position fixed
  top: 0
  z-index zHeader
  background-color cWhite
  transition box-shadow .9s ease
  &._open-menu
    transition box-shadow .4s ease
    box-shadow: inset 1px -2px 23px rgba(0, 0, 0 , 0.1)
  &__button
    display none
  &__left-block
    display flex
    align-items center
  &__logo
    background: url('../img/svg/logo.svg')
    background-repeat: no-repeat
    width 130px
    background-size cover
    height 17px  
  &__button
    padding: 9px 15px 8px 16px
  &__menu
    width 26px
    position relative
    margin-right: 0px
    margin-top: -1px
    height 20px
    &:before
      content ''
      position:absolute
      width 100%
      top:0
      height: 100%
      left -3px
      background: url('../img/svg/close.svg')
      background-size cover
      opacity: 0  
    &:after
      content ''
      position:absolute
      width 100%
      transition opacity .3s ease
      top:0
      height: 100%
      left 0
      background: url('../img/svg/menu.svg')
      background-size cover
      opacity: 1
    &._open
      width 20px
      &:before
        opacity 1
        transition opacity .3s ease
      &:after
        opacity 0

@media screen and (min-width: tWidth)
  .b-header
    padding 40px
    height 97px
    &__logo
      margin-right 36px
    &__menu
      &._open
        width auto
      &:before
        display none
