.action-block-top
  &__item
    width 100%
    font: 400 16px/16px "MyriadPro", sans-serif
    padding 0 50px 25px 50px
    transition color .3s ease
    &--active
      color cTextBlue
      transition color .2s ease
    &:first-child
      padding-top 50px
    &:last-child
      padding-bottom 25px


@media screen and (min-width: dWidth) 
  .action-block-top
    &__item
      &:hover
        color cTextBlue
        transition color .2s ease

