
.b-action-block-bottom
  &__wrapper
    width 33.333%
    display flex
    flex-direction column
    justify-content center
    align-items center
    &._open
      .b-action-block-bottom__pic--move-active
        opacity: 0    
      .b-action-block-bottom__pic--move
        opacity: 1
  &__name
    margin-top 5px
    font: 400 10px/14px "MyriadPro", sans-serif
  
  &__pic-container
    width 25px
    position relative
    height 22px
    &--delete
      width 20px
      height 23px
    
  &__pic
    position absolute
    top 0
    left 0 
    width 100%
    height 100%
  
    &--delete
      width 40px
      height 45px
    
    &--move-active
      opacity: 1
      transition opacity .3s ease
    
    &--move
      opacity: 0
      transition opacity .3s ease
    
  
