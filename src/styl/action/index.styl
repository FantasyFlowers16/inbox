.b-action
  margin-bottom -100%
  position fixed
  bottom 0
  width 100%
  align-items: center
  padding: 0px 13px
  width: 100%
  box-sizing border-box
  background cWhiteFon
  display flex
  right: 0
  transition margin-bottom .3s ease
  &._open
    margin-bottom 0
    box-shadow: 0 1px 15px rgba(0,0,0,0.2)
    z-index zAction
  
  &__block-bottom
    min-height: 80px
    box-sizing: border-box;
    display flex
    padding-top 30px
    width: 100%
  
  &__block-top 
    width: 100%
    position: absolute
    background: white
    bottom: 75px
    left: -100%
    border-top 1px solid cLightBorder
    padding 50px 50px 0px 50px
    box-sizing border-box
    transition left .2s ease, opacity .2s ease
    opacity 0
    &._open
      left: 0%
      opacity 1
    &:before
      content: ''
      position absolute
      width calc(100% - 50px)
      height 1px
      top 25px
      left 25px
      background cLightBorder
    
    &:after
      content: ''
      position absolute
      width calc(100% - 50px)
      height 1px
      bottom -15px
      left 25px
      background cLightBorder
    
  
