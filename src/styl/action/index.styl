.b-action
  margin-bottom -100%
  position fixed
  bottom 0
  width 100%
  align-items: center
  width: 100%
  box-sizing border-box
  background cWhiteFon
  right: 0
  transition margin-bottom .4s ease
  box-shadow: 0px 10px 90px 0px rgba(cBoxShadow 0.25);
  margin-bottom: -100%
  &._open
    margin-bottom 0
    z-index zAction
  
  &__block-bottom
    min-height: 80px
    box-sizing: border-box;
    display flex
    padding: 0px 13px 0 13px;
    width: 100%
    background: cWhiteFon
    &:after
      content: ''
      opacity 0
      position absolute
      width calc(100% - 50px)
      height 1px
      top 15px
      left 25px
      background cLightBorder
    &._open
      &:after
        opacity 1
  
  &__block-top 
    width: 100%
    background: white
    position: relative
    bottom: -200%
    max-height 0
    left 0
    overflow hidden
    opacity 0
    box-sizing border-box
    transition max-height .3s ease-in-out, opacity .3s ease-in-out, box-shadow .3s ease-in-out
    opacity 0
    &._open
      max-height 300px
      transition max-height .4s ease-in-out, opacity .4s ease-in-out, box-shadow .4s ease-in-out
      opacity 1
      &:before, &:after
        opacity 1
        transition opacity .3s ease
    &:before
      content: ''
      position absolute
      width calc(100% - 50px)
      height 1px
      top 25px
      left 25px
      opacity 0
      background cLightBorder
      transition opacity .4s ease
    &:after
      content: ''
      position absolute
      width calc(100% - 50px)
      height 1px
      bottom 0
      left 25px
      background cLightBorder
      opacity 0
      transition opacity .4s ease
    
  
