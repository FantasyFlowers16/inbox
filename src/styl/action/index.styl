.b-action
  margin-bottom -100%
  position fixed
  bottom 0
  width 100%
  align-items: center
  padding: 0px 13px
  width: 100%
  box-sizing border-box
  background cWhiteFon
  display flex
  right: 0
  transition margin-bottom .3s ease
  &._open
    margin-bottom 0
    box-shadow: 0px 10px 90px 0px rgba(0, 0, 0, 0.25);
    z-index zAction
  
  &__block-bottom
    min-height: 80px
    box-sizing: border-box;
    display flex
    padding-top 15px
    width: 100%
    z-index 100
    background: cWhiteFon
    &:after
      content: ''
      opacity 0
      position absolute
      width calc(100% - 50px)
      height 1px
      top 15px
      left 25px
      background cLightBorder
    &._open
      &:after
        opacity 1
  
  &__block-top 
    width: 100%
    position: absolute
    background: white
    bottom: -100%
    left 0
    border-top 1px solid cLightBorder
    padding 50px 50px 0px 50px
    box-sizing border-box
    transition bottom .2s ease, opacity .2s ease
    opacity 0
    &._open
      bottom: 80px
      opacity 1
    &:before
      content: ''
      position absolute
      width calc(100% - 50px)
      height 1px
      top 25px
      left 25px
      background cLightBorder
    
  
