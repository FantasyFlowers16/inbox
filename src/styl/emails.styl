.b-mails
  font: 400 16px/16px "MyriadPro", sans-serif
  margin-top 23px
  &__data-container
    width: 100%;
    padding-left 13px
    width: calc(100% - 26px);
  &__item-wrapper
    display flex
    align-items center
    width: 100%
  &__item
    margin-bottom 24px
    &:last-child
      margin-bottom 30px
    &._unread
      font-weight 600
      .mail-data__text
        color cText
    &._important
      color cTextImportant
      .mail-data__text, .mail-data__email, .mail-data__data
        color cTextImportant
.mail-data
  &__top-block
    display flex
  &__center-block
    margin-top 5px
    padding-left 29px
    display: flex;
    align-items: center;
  &__bottom-block
    padding-left 29px
    margin-top 4px
  &__name-email-container
    display flex
    width calc(100% - 39px)
  &__name
    margin-right 4px
    overflow: hidden
    width 41%
    text-overflow: ellipsis
    white-space: nowrap
  &__email, &__data
    color cTextLightGray
    overflow: hidden
    width: 53%
    height 16px
    text-overflow: ellipsis
    white-space: nowrap
    margin-right 6px
  &__data
    width 100%
    margin-top 3px
  &__thema
    display inline-block
    max-width 80%
    text-overflow: ellipsis
    white-space: nowrap
    overflow: hidden
    margin-right 5px
  &__file
    display inline-block
    background-image: url('../img/file.png')
    width 8px
    height 9px
    background-size cover
  &__text
    font-weight 400
    display inline-block
    text-overflow: ellipsis
    white-space: nowrap
    overflow hidden
    color cTextLightGray
    max-width 100%
