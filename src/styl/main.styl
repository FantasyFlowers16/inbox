.page
  position relative
  overflow hidden
.b-main
  margin-top 67px
  height 100%
  width 100%
  padding 0 25px
  box-sizing border-box
  &:before
    transition opacity .3s ease
    content ""
    opacity 0
    z-index zPopup
  &._popup
    &:before
      transition opacity .3s ease
      content ""
      position fixed
      top 0
      left 0
      width 100%
      height 100%
      background cBlack
      opacity .15
      z-index zPopup
  &__container
    padding-top 16px
    border-top 1px solid cLightBorder
  &__title
    letter-spacing: 2.0px
    font: 400 23px/23px "MyriadPro", sans-serif
  &__search-container
    width 100%
    min-height 35px
    position relative
    display flex
    align-items center
  &__search-wrapper
      position absolute
      overflow hidden
      top 0
      opacity 0
      right 60px
      height 35px
      box-sizing: border-box;
      width 0
      transition width .3s ease 0.05s, opacity .3s ease 0.1s
      &._open
        width calc(100% - 60px)
        opacity 1
  &__search
    border 1px solid cLightBorder
    position absolute
    border-radius 8px
    box-sizing border-box
    height: 35px
    width 100%
    font: 400 23px/23px "MyriadPro", sans-serif

  &__but-container
    position  absolute
    top 0
    width 40px
    height 35px
    right 0
    background-color transparent
    padding 9px 12px
    border-radius 8px
    box-sizing border-box
    display flex
    transition background-color .3s ease
    &._active
      background-color cButBg
      .b-main__search-img
        &:before
          opacity 0
        &:after
          opacity 1
  &__search-img
    height 16px
    width 16px
    position relative
    padding 8px 12px 9px 12px
    box-sizing border-box
    &:before
      content:''
      position absolute
      top 0
      width 100%
      height 100%
      background: url('../img/search.png') no-repeat    
      background-size contain
      opacity 1
      left 0
      transition opacity .3s ease
    &:after
      content:''
      position absolute
      top 0
      width 100%
      transition opacity .3s ease
      height 100%
      background: url('../img/search-active.png') no-repeat    
      background-size contain
      left 0
      opacity 0


.b-main-close {
  top: 31px;
  z-index 100
  right: 13px;
  transform: translate(-50%, -50%);
  position: fixed;
  width: 26px;
}

.b-main-close:before,
.b-main-close:after,
.b-main-close div 
  background: #666666;
  content: "";
  display: block;
  height: 2px;
  border-radius: 3px;
  margin: 7px 0;
  transition: 0.5s;
.b-main-close
  &._open
    &:before
      transform: translateY(12px) rotate(135deg);
    &:after
      transform: translateY(-6px) rotate(-135deg);
    div
      transform: scale(0)

@media screen and (min-width: tWidth)
  .b-main
    margin-top 97px
    padding 0 40px
    &__container
      padding-top: 32px;