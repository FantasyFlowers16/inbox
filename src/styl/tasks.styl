.b-task
  background-color cFonTasks
  margin-bottom: 50px
  &__info-container
    padding 18px 24px 0 20px
    display flex
    justify-content: space-between
    margin-bottom 14px
    &._open
      .b-task__info-img
        transform rotate(0deg)
  &__info-doc-img
    background-image: url('../img/doc.png')
    width 36px
    height 32px
    margin-right 17px
    background-size cover
  &__range
    width 100%
  &__items-container
    max-height: 0
    transition max-height .4s ease
    overflow: hidden
    position relative
    &._open
      max-height: 600px
      overflow auto
  &__items-container-title
    font: 400 24px/24px "MyriadPro", sans-serif
    color cTextLightGray
    position absolute
    top 19px
    right 37px
  &__item
    padding 21px 38px 20px 38px
    &:first-child
      margin-top 20px
  &__item-title
    font: 400 28px/28px "MyriadPro", sans-serif
    margin-bottom 12px
    &--important
      font-weight 600
  &__item-text
    font: 400 24px/24px "MyriadPro", sans-serif
    margin-bottom 13px
  &__item-subtext
    font: 400 22px/25px "MyriadPro", sans-serif
    color cTextLightGray
    margin-bottom 13px
  &__info-wrapper
    display flex
  &__info-img
    transition transform .3s ease
    background-image: url('../img/task.png')
    width 36px
    height 32px
    background-size cover
    transform rotate(180deg)
  &__info-doc
    font: 400 28px/28px "MyriadPro", sans-serif
    color cText
  &__error-container
    font: 400 22px/25px "MyriadPro", sans-serif
    background  cFonTasks
    padding: 50px 38px 42px 38px
    border-top 1px solid cLightBorder
    margin-top: 20px
    position relative
  &__error-title-container
    width 100%
    display flex
  &__error-title
    position relative
    font: 400 22px/25px "MyriadPro", sans-serif
    color cTextLightGray
    position relative
    margin-bottom 10px
    margin-left 10px
.error-task
  &__text-container ,&__resume
    display flex
    flex-wrap wrap
  &__items-container-title
    position absolute
    top 26px
    right 40px
    font: 400 24px/24px "MyriadPro", sans-serif
    color cTextLightGray
    position absolute
  &__text
    display flex
    flex-wrap wrap
    margin-bottom 5px
  &__message-container
    width 100%
    display flex
  &__title
    font: 600 28px/28px "MyriadPro", sans-serif
    margin-bottom 12px
    display inline
    &--img
      margin-right 16px
  &__resume-title-container
    display flex
    margin-top 20px
  &__action-container
    width 100%
  &__action-text
    display inline
    padding 2px 4px
    border-radius 4px
    color cTextWhite
    background cFonAction
  &__message
    position relative
    font: 400 22px/25px "MyriadPro", sans-serif
    color cTextLightGray
    position relative
    margin-left 10px
  &__img
    width 26px
    height 24px
    background-size cover
    display: inline-block
    &--fail
      background-image: url('../img/fail.png')
      margin-left: 18px
    &--error
      width 26px
      height 26px
      background-image: url('../img/error.png')
    &--success
      margin-left 18px
      background-image: url('../img/success.png')

