.b-menu-mobile
  position absolute
  background white
  width 100%
  height 100vh
  z-index: zMenu
  top 0
  overflow auto
  box-sizing border-box
  padding 0 25px
  margin-left -100%
  left 0
  opacity 0
  transition margin-left .5s ease, opacity .4s ease
  &._open
    margin-left 0
    opacity 1
  &__compose
    padding 18.5px 0
  &__compose-container
    margin-bottom 32px
  &__wrapper-points
    position relative
    padding 32px 0 14px 0
    border-bottom 1px solid cLightBorder
    &:first-child
      padding-top 50px
      padding-bottom: 16px
    &:last-child
      border none
      padding: 44px 0 19px 0
  &__points-container
    margin-bottom 17px
    &--planning
      margin-bottom 0
  &__points
    padding 9px 0
    display flex
    justify-content space-between
    font: 400 16px/16px "MyriadPro", sans-serif
    &--special
      padding 10px 0
    &--bottom
      padding 15px 0
    &:hover
      &__link
        color cTextBlue
  &__but
    &--add
      background: url('../img/svg/add.svg')
      background-repeat: no-repeat
      width 18px
      height 18px
      margin-right 7px
      background-size cover
    &--contacts
      background: url('../img/contacts.png')
      background-repeat: no-repeat
      background-size cover
      width 22px
      height 18px
      background-size cover
      margin-right 9px
    &--settings
      background: url('../img/settings.png')
      background-repeat: no-repeat
      background-size cover
      width 23px
      height 23px
      margin-right 7px
    &--logout
      background: url('../img/logout.png')
      background-size cover
      background-repeat: no-repeat
      width 16px
      height 19px
      margin-right: 12px
      margin-left: 3px
  &__points-left
    display flex
    align-items center
  &__img
    &--key
      background: url('../img/key.png')
      background-size cover
      position absolute
      width 21px
      height 21px
      bottom 25px
      right 0
  &__points-right
    font: 400 14px/14px "MyriadPro", sans-serif
    color cTextWhite
    padding 3px 7px
    border-radius 4px
    background-color cBlueLight 
    &--empty
      display none
  &__count
    text-align center
    color cLight
    font: 400 14px/14px "MyriadPro", sans-serif
    margin-left 11px
  &__link
    text-align center
    transition color .3s ease
    &:hover
      transition color .2s ease
      color cTextBlue
  &__footer
    padding-top 8px
    display: flex
    flex-wrap: wrap
  &__footer-link
    margin-right 18px
    font: 400 15px/26px "MyriadPro", sans-serif
    color cTextLightGray
    text-decoration inherit
    