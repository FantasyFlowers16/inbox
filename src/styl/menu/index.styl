.b-menu-mobile
  position absolute
  background cWhiteFon
  width 100%
  height 100%
  top -20%
  overflow auto
  box-sizing border-box
  padding 0 25px
  right 0
  opacity 0
  visibility:hidden;
  transition top .4s ease, opacity .3s ease .1s, visibility .0s ease .4s, box-shadow .2s ease .3s
  &._open
    visibility:visible;
    box-shadow: 0px 10px 45px 0px rgba(cBoxShadow 0.25)
    transition top .3s ease, opacity .3s ease, box-shadow .4s ease .2s
    z-index: zMenu
    opacity 1
    top 0
    .b-menu-mobile__wrapper-points
      opacity 1
  .b-menu-mobile__wrapper-points
    transition opacity .2s ease
    opacity 0
  &__button-container
    margin-bottom 32px
  &__button
    padding 12px 0
  &__wrapper-points
    position relative
    padding 32px 0 14px 0
    border-bottom 1px solid cLightBorder
    &:first-child
      padding-top 24px
      padding-bottom: 16px
    &:last-child
      border none
      padding: 44px 0 19px 0
  &__list
    margin-bottom 17px
    &--planning
      margin-bottom 0
  &__img
    background: url('../img/key.png')
    background-size cover
    position absolute
    width 21px
    height 21px
    bottom 25px
    right 0
  &__footer
    padding-top 8px
    display: flex
    flex-wrap: wrap

@media screen and (min-width: tWidth)
  .b-menu-mobile
    height 100vh
    width 352px
    position: fixed;
    z-index zMenuTablet
    box-shadow: -16px -7px 59px 0px rgba(cBoxShadow, 0.08)
    right -100%
    padding: 0 40px;
    opacity 1
    top 0
    visibility: visible;
    transition right .5s ease
    &._open
      visibility: visible;
      right 0
      transition right  .4s ease
    &__button-container
      display none
    &__wrapper-points
      &:first-child
        padding-top 86px
        padding-bottom: 16px

@media screen and (min-width: dWidth)
  .b-menu-mobile
    width 262px
    right auto
    left 0
    height 100%
    opacity 1
    visibility: visible;
    .b-menu-mobile__wrapper-points
      opacity 1
    &__button-container
      margin-bottom: 27px
      display block
    &__wrapper-points
      &:first-child
        padding-top 41px
    &__logo
      background: url('../img/logo.png')
      background-repeat: no-repeat
      width 130px
      background-size cover
      height 17px  
      margin-bottom 80px
   
 