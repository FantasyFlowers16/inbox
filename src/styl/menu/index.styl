.b-menu-mobile
  position absolute
  background white
  width 100%
  height 100vh
  z-index: zMenu
  top 0
  overflow auto
  box-sizing border-box
  padding 0 25px
  margin-left -100%
  left 0
  opacity 0
  transition margin-left .5s ease, opacity .4s ease
  &._open
    margin-left 0
    opacity 1
  &__button-container
    margin-bottom 32px
  &__button
    padding 12px 0
  &__wrapper-points
    position relative
    padding 32px 0 14px 0
    border-bottom 1px solid cLightBorder
    &:first-child
      padding-top 91px
      padding-bottom: 16px
    &:last-child
      border none
      padding: 44px 0 19px 0
  &__list
    margin-bottom 17px
    &--planning
      margin-bottom 0
  &__img
    background: url('../img/key.png')
    background-size cover
    position absolute
    width 21px
    height 21px
    bottom 25px
    right 0
  &__footer
    padding-top 8px
    display: flex
    flex-wrap: wrap
