.b-menu-mobile
  position absolute
  background white
  width 100%
  height 100%
  top -20%
  overflow auto
  box-sizing border-box
  padding 0 25px
  right 0
  opacity 0
  z-index: -1;
  transition top .3s ease, opacity .2s ease
  &._open
    transition top .4s ease, opacity .3s ease
    z-index: zMenu
    top 0
    opacity 1
  &__button-container
    margin-bottom 32px
  &__button
    padding 12px 0
  &__wrapper-points
    position relative
    padding 32px 0 14px 0
    border-bottom 1px solid cLightBorder
    &:first-child
      padding-top 91px
      padding-bottom: 16px
    &:last-child
      border none
      padding: 44px 0 19px 0
  &__list
    margin-bottom 17px
    &--planning
      margin-bottom 0
  &__img
    background: url('../img/key.png')
    background-size cover
    position absolute
    width 21px
    height 21px
    bottom 25px
    right 0
  &__footer
    padding-top 8px
    display: flex
    flex-wrap: wrap

@media screen and (min-width: tWidth)
  .b-menu-mobile
    height 100vh
    width 352px
    position: fixed;
    z-index zMenuTablet
    left auto
    box-shadow: -16px -7px 59px 0px rgba(0, 0, 0, 0.08)
    right -100%
    padding: 0 40px;
    opacity 1
    &._open
      right 0
    &__button-container
      display none
    &__wrapper-points
      &:first-child
        padding-top 53px
        padding-bottom: 16px