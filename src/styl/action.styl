.b-action
  margin-bottom -100%
  position fixed
  bottom 0
  width 100%
  align-items: center
  padding: 0px 13px
  width: 100%
  box-sizing border-box
  background cWhiteFon
  display flex
  right: 0
  transition margin-bottom .3s ease
  &._open
    margin-bottom 0
    box-shadow: 0 1px 15px rgba(0,0,0,0.2)
    z-index zAction
  
  &__point-bottom
    min-height: 80px
    box-sizing: border-box;
    display flex
    padding-top 30px
    width: 100%
  
  &__point-list
    width: 100%
    position: absolute
    background: white
    bottom: 75px
    left: -100%
    border-top 1px solid cLightBorder
    padding 50px 50px 0px 50px
    box-sizing border-box
    transition left .2s ease, opacity .2s ease
    opacity 0
    &._open
      left: 0%
      opacity 1
    &:before
      content: ''
      position absolute
      width calc(100% - 50px)
      height 1px
      top 25px
      left 25px
      background cLightBorder
    
    &:after
      content: ''
      position absolute
      width calc(100% - 50px)
      height 1px
      bottom -15px
      left 25px
      background cLightBorder
    
  

.point-list
  &__item
    width 100%
    font: 400 16px/16px "MyriadPro", sans-serif
    padding-bottom 28px
    transition color .3s ease
    &:last-child
      padding-bottom 0
    
    &:hover
      color cTextBlue
      transition color .2s ease
    
  

.point-bottom
  &__wrapper
    width 33.333%
    display flex
    flex-direction column
    justify-content center
    align-items center
    &._open
      .point-bottom__pic--move-active
        opacity: 0    
      .point-bottom__pic--move
        opacity: 1
  &__name
    margin-top 5px
    font: 400 10px/14px "MyriadPro", sans-serif
  
  &__pic-container
    width 25px
    position relative
    height 22px
    &--delete
      width 20px
      height 23px
    
  &__pic
    position absolute
    top 0
    left 0 
    width 100%
    height 100%
  
    &--delete
      width 40px
      height 45px
    
    &--move-active
      opacity: 1
      transition opacity .3s ease
    
    &--move
      opacity: 0
      transition opacity .3s ease
    
  
