.b-instr{
  margin-top 25px
  padding-bottom: 12px;
  border-bottom 1px solid cLightBorder
  color cTextLightGray
  &__container{
    display flex
    padding-bottom: 27px
  }
  &__view-hide{
    border-top 1px solid cLightBorder
    padding  0px 50px  3px 50px
    transform: scale(1, 0);
    max-height 0
    transition transform .3s ease, max-height .3s ease
    &._open{
      max-height 300px
      transform: scale(1, 1);
    }
  }
  &__view-select-container{
    font: 400 21px/32px "MyriadPro", sans-serif
    display flex
    width 100%
    justify-content space-between
    margin-top 55px
    &:last-child{
      margin-bottom 38px
      margin-top 45px
    }
  }
  &__view-select-title{
    font: 400 32px/35px "MyriadPro", sans-serif
  }
  &__option-container{
    display flex
    align-items center
    &--view, &--actions{
      margin-left 47px 
    }
    &--actions{
      display none
      &._visible{
        display flex
      }
    }
    &:hover, &._open{
      .b-instr__title{
        color cTextBlue
      }
      .b-instr__arrow{
        &:after{
          opacity 1
        }
        &:before{
          opacity 0
        }
      }
    }
  }
  &__arrow{
    width 20px
    height 14px
    margin-left 9px
    position relative
    &:before{
      content ''
      position absolute
      opacity 1
      top 0
      bottom 0
      width 100%
      height 100%
      background-image: url('../img/arrow.png');
      background-size cover
      background-repeat no-repeat
      transition opacity .3s ease
    }
    &:after{
      opacity: 0
      content ''
      position absolute
      top 0
      bottom 0
      width 100%
      height 100%
      background-image: url('../img/arrow-active.png');
      background-size cover
      background-repeat no-repeat
      transition opacity .3s ease
    }
    &--main{
      margin-left 55px  
    }
  }
  &__title{
    transition color .3s ease
    font: 400 31px/31px "MyriadPro", sans-serif
    color cTextLightGray 
  }
}