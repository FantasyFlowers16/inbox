.b-instr
  margin-top 11px
  padding-bottom: 5px
  border-bottom 1px solid cLightBorder
  color cTextLightGray
  &__container
    display flex
    padding-bottom: 13px
  &__view-hide
    border-top 1px solid cLightBorder
    padding  0px 25px  3px 25px
    transform: scale(1, 0)
    max-height 0
    transition transform .3s ease, max-height .3s ease
    &._open
      max-height 300px
      transform: scale(1, 1)
  &__view-select-container
    font: 400 11px/16px "MyriadPro", sans-serif
    display flex
    width 100%
    justify-content space-between
    margin-top 27px
    &:last-child
      margin-bottom 19px
      margin-top 22.5px
  &__view-select-title
    font: 400 16px/17px "MyriadPro", sans-serif
  &__option-container
    display flex
    align-items center
    &--view, &--actions
      margin-left 25px 
    &--actions
      display none
      &._visible
        display flex
    &:hover, &._open
      .b-instr__title
        color cTextBlue
      .b-instr__arrow
        &:after
          opacity 1
        &:before
          opacity 0
  &__arrow
    width 10px
    height 7px
    margin-left 5px
    position relative
    &:before
      content ''
      position absolute
      opacity 1
      top 0
      bottom 0
      width 100%
      height 100%
      background-image: url('../img/arrow.png')
      background-size cover
      background-repeat no-repeat
      transition opacity .3s ease
    &:after
      opacity: 0
      content ''
      position absolute
      top 0
      bottom 0
      width 100%
      height 100%
      background-image: url('../img/arrow-active.png')
      background-size cover
      background-repeat no-repeat
      transition opacity .3s ease
    &--main
      margin-left 27px  
  &__title
    transition color .3s ease
    font: 400 15px/15px "MyriadPro", sans-serif
    color cTextLightGray
    cursor pointer