.b-instr
  margin-top 11px
  padding-bottom: 5px
  border-bottom 1px solid cLightBorder
  color cTextLightGray
  &__title-block
    display flex
    padding-bottom: 13px
  &__view-block
    border-top 1px solid cLightBorder
    padding  0px 25px  3px 25px
    transform: scale(1, 0)
    max-height 0
    transition transform .3s ease, max-height .3s ease
    &._open
      max-height 300px
      transform: scale(1, 1)

.instr-arrow
  width 10px
  height 7px
  margin-left 5px
  position relative
  &:before
    content ''
    position absolute
    opacity 1
    top 0
    bottom 0
    width 100%
    height 100%
    background-image: url('../img/arrow.png')
    background-size cover
    background-repeat no-repeat
    transition opacity .3s ease
  &:after
    opacity: 0
    content ''
    position absolute
    top 0
    bottom 0
    width 100%
    height 100%
    background-image: url('../img/arrow-active.png')
    background-size cover
    background-repeat no-repeat
    transition opacity .3s ease
  &--main
    margin-left 27px 