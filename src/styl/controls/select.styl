.select
  &__content
    position relative
    padding: 2px 5px
    transition background-color .3s ease
    &:hover
      background-color cFonOpacity
      border-radius 5px
  &__list
    margin: 15px 0;
    border-radius: 0px 0px 6px 6px
    background cFonGray
    width auto
    position absolute
    right 0
    display: flex
    z-index zCustomSelect
    flex-direction: column
    max-width 400px
    box-sizing border-box
    max-height 0
    transition max-height .2s ease-in
    overflow hidden
    box-shadow: 0px 4px 4px rgba(50, 50, 71, 0.1)
    font-size: 16px
    top: 10px
    &.opened
      transition max-height .3s ease-in
      max-height 250px
  &__title
    border none
    position relative
    padding-right 13px
    font: 400 16px/16px "MyriadPro", sans-serif
    &._open
      &:before
        opacity: 0
      &:after
        opacity: 1
    &:before
      content ''
      position absolute
      display block
      opacity 1
      width 10px
      height 7px
      background-image: url('../img/arrow.png')
      background-repeat no-repeat
      background-size cover
      top calc(50% - 4px)
      right 0
    &:after
      opacity 0
      content ''
      position absolute
      display block
      width 10px
      height 7px
      background-image: url('../img/arrow-active.png')
      background-size cover
      top calc(50% - 4px)
      right 22px
  &__item,&__title
    cursor pointer
    box-sizing border-box
    max-width 353px
    color cTextLightGray
  &__item
    height 0px
    text-align: end
    min-height 24px    
    word-break: normal
    align-items center
    justify-content flex-end
    display flex
    padding 7px 18px 7px 5px
    transition background .3s ease ,color  .3s ease
    &:first-child
      margin-top 10px
    &.active
      color black
    &:hover
      color black
      background cFonOpacity

 .range
    background-color cRaitingLine
    width 100%
    height 3px
    appearance auto
    position relative
    outline: none
    width: 100%
    &__active
      background-color cButBg
      position: absolute
      top: 0
      left: 0
      height: 100%

