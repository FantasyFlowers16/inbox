.b-profile
  display flex
  margin-bottom 21px
  &__avatar-container
    height: 0
    overflow hidden
    padding-bottom 23%
    position relative
    width 23%
    min-width 23%
    border-radius 8px
  &__avatar
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &__data
    padding-left 18px
    width 77%
    box-sizing border-box
  &__status-img-container
    width 15px
    height 16px
    position relative
  &__status-img
    width 100%
    height 100%
    position absolute
  &__name
    font: 400 15px/15px "MyriadPro", sans-serif
  &__status, &__disk
      font: 400 13px/13px "MyriadPro", sans-serif
      color cTextLightGray
      position relative
      display flex
      align-items center
      margin-top 9px
  &__text
    margin-left 8px
  &__range
    margin-left: 8px
    width: calc(100% - 8px)
    margin-top: 3px
  &__disk-container
    width 100%  
  &__img-container
    width 16px
    height 17px
    position relative
  &__img
    position absolute
    background-size cover
    top 0
    right 0
    width 100%
    height 100%
