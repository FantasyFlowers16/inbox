.b-profile{
  display flex
  margin-bottom 42px
  &__avatar-container{
    height: 0
    overflow hidden
    padding-bottom 22%
    position relative
    width 23%
    min-width 23%
    border-radius 15px
  }
  &__avatar{
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  }
  &__data{
    padding-left 37px
    width 77%
    box-sizing border-box
  }
  &__name{
    font: 400 30px/30px "MyriadPro", sans-serif
  }
  &__status, &__disk{
      font: 400 26px/26px "MyriadPro", sans-serif
      color cTextLightGray
      position relative
      display flex
      align-items center
      margin-top 18px
  }
  &__text{
    margin-left 15px
  }
  &__range{
    margin-left: 15px;
    width: calc(100% - 15px);
    margin-top: 6px;
  }
  &__disk-container{
    width 100%  
  }
  &__img-container{
    width 32px
    height 34px
    position relative
  }
  &__img{
    position absolute
    background-size contain
  }
}